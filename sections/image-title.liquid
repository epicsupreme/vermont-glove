<div class="container mx-auto flex items-center justify-between {% if section.settings.flip %}flex-row-reverse{% endif %}" style="--primary:{{ section.settings.primary_color }};--secondary:{{ section.settings.secondary_color }};">

   <div class="w-1/2 px-4 py-20">
      {%- render 'image', image: section.settings.image, classes: 'w-full  ' -%}
   </div>
   <div class="w-1/2 px-4">
      <div class="text-5xl uppercase font-display text-[color:var(--primary)] mb-5">
         {{ section.settings.title | newline_to_br}}
      </div>

      {%- render 'button', url: section.settings.button_url, text: section.settings.button_text, size: "m" -%}

   </div>

</div>

{% schema %}
{
   "name": "Image + Title",
   "settings": [
   {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
   },
   {
      "type": "textarea",
      "id": "title",
      "label": "Title"
   },
   {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
   },
   {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
   },
  {
     "type": "color",
     "id": "primary_color",
     "label": "Primary Color",
     "default": "#452C80"
  },
  {
   "type": "color",
   "id": "secondary_color",
   "label": "Secondary Color",
   "default": "#ffffff"
},
{
   "type": "checkbox",
   "id": "flip",
   "label": "Flip?",
   "default": false
}
   ],
   "presets": [
         {
            "name": "Image + Title"
         }
      ]
}
{% endschema %}