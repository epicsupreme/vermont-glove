{
  "name": "epicsupreme-shopify",
  "version": "1.2.2",
  "description": "Modern Shopify development workflow, with Online Store 2.0 features and built with performance and accessibility in mind..",
  "author": "epicsupreme",
  "private": true,
  "license": "MIT",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "init": "shx rm -rf .git && git init -b main",
    "clean": "shx rm -rf assets/* && touch assets/.gitkeep",
    "start": "run-p serve watch",
    "start-dev": "run-p serve-dev watch",
    "serve": "shopify theme dev --store=vermont-glove.myshopify.com",
    "serve-dev": "shopify theme dev --store=vermont-glove-playground.myshopify.com",
    "build": "webpack --config .config/webpack/webpack.config.prod.js",
    "watch": "webpack watch --config .config/webpack/webpack.config.dev.js",
    "zip": "run-s build && shopify theme package .",
    "lint": "shopify theme check --config .config/.theme-check.yml",
    "format": "prettier --config .config/prettier.config.js --ignore-path .config/.prettierignore --write .",
    "pull": "shopify theme pull -n",
    "pull-data": "shopify theme pull -n --only \"*.json\" --store=vermont-glove.myshopify.com",
    "push": "shopify theme push",
    "push-files": "shopify theme push --ignore \"*.json\"",
    "deploy": "run-s format build push",
    "deploy-files": "run-s format build push-files",
    "deploy-new": "run-s format build && shopify theme push --unpublished",
    "prepare": "husky install .config/.husky"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "husky": "^9.0.11",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.5.14",
    "prettier": "^3.3.0",
    "sass": "^1.77.4",
    "sass-loader": "^14.2.1",
    "shx": "^0.3.4",
    "size-plugin": "3.0.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0",
    "webpack-remove-empty-scripts": "^1.0.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.14.0",
    "@googlemaps/js-api-loader": "^1.16.6",
    "@mertasan/tailwindcss-variables": "^2.7.0",
    "@shopify/theme-cart": "^4.1.1",
    "@shopify/theme-currency": "^4.1.1",
    "@shopify/theme-product": "^4.1.1",
    "@shopify/theme-product-form": "^4.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "alpinejs": "^3.14.0",
    "gsap": "^3.12.5",
    "hc-sticky": "^2.2.7",
    "klaviyo-subscribe": "^1.0.0",
    "lodash": "^4.17.21",
    "postcss-import": "^16.1.0",
    "swiper": "^11.1.4",
    "tailwindcss": "^3.4.3"
  }
}
