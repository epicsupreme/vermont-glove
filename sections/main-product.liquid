{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{% assign current_variant = product.selected_or_first_available_variant %}


<div
   class="flex md:px-0 product-desktop">


   <div
      class="relative hidden md:block product-images md:w-1/2">
      {% for image in product.images %}
         <div
            class="product-image">
            {%- render 'image', image: image, classes: 'w-full' -%}
         </div>
      {% endfor %}

   </div>

   <div

      class="md:w-1/2">



      <div
         class="pb-10 product-info">
         <div
            class="w-full px-4 md:mx-auto md:max-w-[525px]">
            <div
               class="flex items-baseline justify-between pt-6 mb-2 md:pt-24">
               <h1
                  class="font-serif text-2xl font-display">{{ product.title }}</h1>
               <div
                  class="text-right uppercase">

                  {{ current_variant.price | money_without_trailing_zeros }}
               </div>
            </div>

            <div
               class="mb-4 text-sm leading-relaxed">
               {{ product.description }}
            </div>




            {% render 'product-form', product: product %}




         </div>
      </div>
   </div>

</div>



{% schema %}
{
   "name": "Product",
   "settings": [
   ]
}
{% endschema %}