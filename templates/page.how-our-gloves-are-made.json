    "65f253b3-4c4e-468c-add6-2efc06720a20": {
      "type": "history",
      "settings": {
        "title": "",
        "subhead": "A SCHVITZ, FOR HEALTH",
        "text": "<p>Each glove is then steamed on a specialized heated hand-mold. The heat and steam help to properly shape the glove and align the seams for best use.<\/p>",
        "media_type": "uploaded_video",
        "upload_video_url": "https:\/\/cdn.shopify.com\/videos\/c\/o\/v\/5364350f0c5542ac855bc18f9c079246.mp4",
