<header
   class="fixed z-40 w-full"
   id="header"
   style="--header-color:{{ section.settings.text_coloe }};--header-bg:{{ section.settings.bg_color }}">

   {%- render 'header-top-bar' -%}

   <div
      class="flex items-center justify-between h-40 px-6 transition-all duration-500 bg-white text-brand header-container">
      <div
         class="flex w-1/3 text-xl uppercase font-headline">
         {% for link in linklists.desktop_left_nav.links %}
            <a
               href="{{ link.url }}" title="{{ link.title }}" class="mr-16 last:mr-0">{{ link.title }}</a>
         {% endfor %}
      </div>
      <div
         class="flex items-center justify-center w-1/3">
         <a
            href="/"
            title="{{ shop.name }}" class="absolute w-32 transition-all duration-500 text-brand logo">
            {%- render 'svg-logo' -%}
         </a>

         <a
            href="/"
            title="{{ shop.name }}" class="absolute w-56 transition-all duration-500 opacity-0 pointer-events-none text-brand logotype">
            {%- render 'svg-logotype' -%}
         </a>
      </div>
      <div
         class="flex justify-end w-1/3">

         <a
            @click.prevent="cartOpen = true"
            class="block pl-3 text-xs md:pl-8 md:text-base hover:text-red"
            href="/cart"
            title="Cart">
            Cart

            <span
               class="font-bold text-red"
               id="cart-count"
               x-text="cartCount">
               {{ cart.item_count }}
            </span>
         </a>


      </div>
   </div>
</header>

{% schema %}

{
"name": "t:sections.header.name",
"settings": [
   {
      "type": "checkbox",
      "id": "top_bar",
      "label": "Top Bar Active",
      "default": true
   },
   {
      "type": "richtext",
      "id": "text",
      "label": "Text"
   },
   {
      "type": "color",
      "id": "text_coloe",
      "label": "Text Color",
      "default": "#ffffff"
   },
   {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#82CDBB"
   }
]
}

{% endschema %}